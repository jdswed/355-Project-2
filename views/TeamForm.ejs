        <script type="text/javascript">
        
            // Once the HTML has loaded, link javascript functions to HTML elements
            $(document).ready(function () {
            
                // Populate Drop Down Menu with Teams from MySQL
                $.ajax({
                    url: "/Teams",
                    type: "POST",
                    contentType: "application/json",
                    processData: false,
                    complete: function (data) {
                        $('div#users').html(data.responseText);
                    }
                });
            
                // Retrieve data from MySQL for a specific user
                $('#Team-submit').click(function () {
                    var payload = {
                        id: $('#Team-list').val(),
                    };
                    
                    $.ajax({
                        url: "/Teams",
                        type: "POST",
                        contentType: "application/json",
                        processData: false,
                        data: JSON.stringify(payload),
                        complete: function (data) {
                            $('#output').html(data.responseText);
                        }
                    });
                });
            });
</script>
