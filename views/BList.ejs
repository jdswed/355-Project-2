    <script type="text/javascript">
        $(document).ready(function () {
            $('#BatterSubmit').click(function () {
                var payload = {
                    Team: $('#Team').val(),
                };

		console.log(payload);

                $.ajax({
                    url: "/Batters",
                    type: "POST",
                    contentType: "application/json",
                    processData: false,
                    data: JSON.stringify(payload),
                    complete: function (data) {
                        $('#output').html(data.responseText);
                    }
                });
            });
       

            $('#BatterEnter').click(function () {
                var payload = {
                    Batter_Name: $('#name').val(),
                    Team: $('#team').val(),
                    Position: $('#position').val(),
                    Service_Time: $('#Service_Time').val()
                };

                console.log(payload);

                $.ajax({
                    url: "/Batters/Enter",
                    type: "POST",
                    contentType: "application/json",
                    processData: false,
                    data: JSON.stringify(payload),
                    complete: function (data) {
                        $('#complete').html(data.responseText);
                    }
                });
            });
        });

    </script>    
